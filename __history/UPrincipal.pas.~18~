unit UPrincipal;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ExtCtrls, StdCtrls, Mask, rxToolEdit, UImportarArquivoRetornoUseCase,
  UInputImportarArquivoRetornoDTO;

type
  TfrmPrincipal = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    Label1: TLabel;
    btnFechar: TButton;
    btnProcessar: TButton;
    edtArquivo: TFilenameEdit;
    procedure btnFecharClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure btnProcessarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

procedure TfrmPrincipal.btnFecharClick(Sender: TObject);
begin
  Close;
end;

procedure TfrmPrincipal.btnProcessarClick(Sender: TObject);
var
  input : TInputImportarArquivoRetornoDTO;
  usecase: TImportarArquivoRetornoUseCase;
begin
  if not FileExists(edtArquivo.Text) then begin
    MessageBox(Handle, 'Arquivo informado não existe', 'Warning', mb_OK);
    edtArquivo.SetFocus();
  end;

  try
    input := TInputImportarArquivoRetornoDTO.Create(edtArquivo.Text);
    usecase := TImportarArquivoRetornoUseCase.Create();

    usecase.Execute(input);
  finally
    input.Destroy();
    FreeAndNil(input);

    usecase.Destroy();
    FreeAndNil(usecase);
  end;
end;

procedure TfrmPrincipal.FormCreate(Sender: TObject);
begin
  edtArquivo.Dialog.InitialDir := 'c:\temp';
end;

end.
